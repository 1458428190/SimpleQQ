<?xml version="1.0" encoding="UTF-8"?>
<c3p0-config>
	<default-config>
		<property name="jdbcUrl">jdbc:mysql://localhost:3306/qq</property> <!-- 连接数据库的url -->
		<property name="driverCLass">com.mysql.jdbc.Driver</property>      <!-- 数据库驱动 -->
		<property name="user">root</property>                               <!-- 数据库用户名 -->
